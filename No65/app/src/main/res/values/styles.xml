    <style name="slide2_trigram_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">200sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

</resources>