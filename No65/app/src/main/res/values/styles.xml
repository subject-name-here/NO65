<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="game_header_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/no_65</item>
    </style>

    <style name="menu_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black_but_white_when_pressed</item>
        <item name="android:background">@drawable/white_but_black_when_pressed</item>
    </style>

    <style name="loading_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="menu_maps_style">
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/black_but_white_when_pressed</item>
        <item name="android:background">@drawable/white_but_black_when_pressed</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/no_65</item>
    </style>


<!-- HELP TRIGRAMS -->

    <style name="help_header_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">200sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="help_item_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/white_background_stroke</item>
        <item name="autoSizeMinTextSize">2sp</item>
        <item name="autoSizeMaxTextSize">40sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="help_button_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_but_white_when_pressed</item>
        <item name="android:background">@drawable/white_but_black_when_pressed</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">28sp</item>
    </style>

<!--  ENEMY  -->

    <style name="letter_cell_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/symbola</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">200sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="maxLines">1</item>
    </style>

    <style name="letter_cell_style_center" parent="letter_cell_style">
        <item name="android:background">@drawable/stroke_back</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="letter_cell_style_upper_edges" parent="letter_cell_style">
        <item name="android:fontFamily">@font/no_65</item>
    </style>

    <style name="letter_cell_style_center_edges" parent="letter_cell_style">
        <item name="android:fontFamily">@font/no_65</item>
    </style>

<!--  end ENEMY  -->


<!--  BATTLEFIELD  -->

    <style name="element_style">
        <item name="android:fontFamily">@font/symbola</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">100sp</item>
        <item name="android:scaleX">3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="battle_name_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="battlefield_button_style">
        <item name="android:fontFamily">@font/no_65</item>
    </style>

    <style name="protagonist_image_cell">
        <item name="android:fontFamily">@font/symbola</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="modifiers_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/stroke_back</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="dissolve_style">
        <item name="android:fontFamily">@font/symbola</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--  end BATTLEFIELD  -->


<!--  LANDS & CREATOR  -->

    <style name="lands_action_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">200sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/lands_action_back</item>
        <item name="android:textColor">@color/black_but_white_when_pressed</item>
        <item name="android:fontFamily">@font/no_65</item>
    </style>

    <style name="lands_control_static_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">200sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/white_background_stroke</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/no_65</item>
    </style>

    <style name="lands_cell_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="location_name_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="speech_view_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- CREATOR SPECIFIC STYLES -->

    <style name="creator_item_style">
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/no_65</item>
    </style>

    <style name="creator_center_cell_coordinates_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/symbola</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="creator_action_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


<!--  end LANDS & CREATOR  -->

<!-- INIT NEW GAME -->

    <style name="tutorial_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="init_new_game_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

<!-- end INIT NEW GAME -->

<!--    DIVIDER-->

    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>

<!--    end DIVIDER-->

    <style name="ad_text_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="d99_option_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_but_white_when_pressed</item>
        <item name="android:background">@drawable/white_but_black_when_pressed</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="maxLines">1</item>
    </style>


<!--    EXTRAS-->

    <style name="extras_battle_style">
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/black_but_white_when_pressed</item>
        <item name="android:background">@drawable/white_but_black_when_pressed</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/no_65</item>
    </style>

    <style name="sound_test_item_style">
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/black_but_white_when_pressed</item>
        <item name="android:background">@drawable/white_but_black_when_pressed</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

<!-- end EXTRAS -->

<!--    INTRO-->

    <style name="slide1_half_whole_style">
        <item name="android:fontFamily">@font/no_65</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">200sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
