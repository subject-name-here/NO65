<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_d99_h25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_d99_h50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_d99_h75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89" />

    <TextView
        android:id="@+id/health_decrease_field"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:fontFamily="@font/no_65"
        android:gravity="bottom|center"
        android:padding="4dp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h50"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v33" />

    <TextView
        android:id="@+id/hand1"
        style="@style/letter_cell_style_center_edges"
        android:text="@string/block_symbol"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_d99_h50" />

    <TextView
        android:id="@+id/hand2"
        style="@style/letter_cell_style_center_edges"
        android:text="@string/block_symbol"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v22"
        app:layout_constraintStart_toStartOf="@+id/guideline_v11"
        app:layout_constraintTop_toTopOf="@+id/guideline_d99_h50" />

    <TextView
        android:id="@+id/hand3"
        style="@style/letter_cell_style_center_edges"
        android:text="@string/block_symbol"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v33"
        app:layout_constraintStart_toStartOf="@+id/guideline_v22"
        app:layout_constraintTop_toTopOf="@+id/guideline_d99_h50" />

    <include
        android:id="@+id/enemy_cells_d99"
        layout="@layout/character_cells_d99_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h75"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v67"
        app:layout_constraintStart_toStartOf="@+id/guideline_v33"
        app:layout_constraintTop_toTopOf="@+id/guideline_d99_h25" />

    <TextView
        android:id="@+id/hand4"
        style="@style/letter_cell_style_center_edges"
        android:text="@string/block_symbol"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v78"
        app:layout_constraintStart_toStartOf="@+id/guideline_v67"
        app:layout_constraintTop_toTopOf="@+id/guideline_d99_h50" />

    <TextView
        android:id="@+id/hand5"
        style="@style/letter_cell_style_center_edges"
        android:text="@string/block_symbol"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_v89"
        app:layout_constraintStart_toStartOf="@+id/guideline_v78"
        app:layout_constraintTop_toTopOf="@+id/guideline_d99_h50" />

    <TextView
        android:id="@+id/hand6"
        style="@style/letter_cell_style_center_edges"
        android:text="@string/block_symbol"
        app:layout_constraintBottom_toTopOf="@+id/guideline_d99_h75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_v89"
        app:layout_constraintTop_toTopOf="@+id/guideline_d99_h50" />

    <LinearLayout
        android:id="@+id/speech_bubble_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/dialog_back"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_v67"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/speech_bubble_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <com.lb.auto_fit_textview.AutoResizeTextView
                android:id="@+id/speech_bubble"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/no_65"
                android:gravity="center"

                android:textColor="@color/black"
                android:textSize="96sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>